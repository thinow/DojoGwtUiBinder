<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:r="urn:import:dojo.gwt.uibinder.client.screen.product.rate">

	<ui:with field="messages"
		type="dojo.gwt.uibinder.client.resources.i18n.Messages" />

	<ui:style src="../../resources/constants.css">
		.column {
			height: 38em;
			padding: 1em;
			border-radius: borderRadius;
		}
		
		.column.left {
			float: left;
			background-color: darkColor;
		}
		
		.column.right {
			float: right;
			width: 55em;
			background-color: lightColor;
		}
		
		.left IMG {
			border-radius: borderRadius;
		}
		
		.name {
			float: left;
			font-size: 30px;
			color: darkColor;
		}
		
		.rate {
			float: right;
			padding: 0.8em;
			text-align: center;
			background-color: mediumColor;
			color: lightColor;
			border-radius: borderRadius;
		}
		
		.rate .line {
			font-size: 22px;
			font-weight: bold;
		}
		
		.clear {
			clear: both;
		}
		
		@external gwt-DisclosurePanel, header, content;
		.gwt-DisclosurePanel {
			padding: 0.8em 0;
			width: 100%;
		}
		
		.gwt-DisclosurePanel .header {
			background-color: mediumColor;
			border-radius: borderRadius;
			padding-left: 1em;
		}
		
		.gwt-DisclosurePanel .header TD {
			color: lightColor;
		}
		
		.gwt-DisclosurePanel .content {
			border-left: none;
		}
		
		.details DIV>SPAN {
			display: inline-block;
			width: 7em;
		}
		
		@external gwt-Label;
		.details .gwt-Label {
			display: inline;
			font-weight: bold;
		}
	</ui:style>

	<g:HTMLPanel>

		<!-- Colonne de gauche -->
		<div class="{style.column} {style.left}">
			<g:Image ui:field="picture" />
		</div>

		<!-- Corps de la vue -->
		<div class="{style.column} {style.right}">

			<g:Label ui:field="name" addStyleNames="{style.name}" />

			<div class="{style.rate}">
				<g:InlineLabel text="{messages.rateTitle}" />
				<r:RateLine ui:field="rateLine" addStyleNames="{style.line}" />
			</div>

			<g:DisclosurePanel open="true" addStyleNames="{style.clear}">
				<g:customHeader>
					<g:InlineLabel text="{messages.descriptionTitle}" />
				</g:customHeader>
				<g:Label ui:field="description" />
			</g:DisclosurePanel>

			<g:DisclosurePanel open="true">
				<g:customHeader>
					<g:InlineLabel text="{messages.detailsTitle}" />
				</g:customHeader>
				<g:HTMLPanel addStyleNames="{style.details}">
					<div>
						<g:InlineLabel text="{messages.color}" />
						<g:Label ui:field="color" />
					</div>
					<div>
						<g:InlineLabel text="{messages.alcohol}" />
						<g:Label ui:field="alcohol" />
					</div>
					<div>
						<g:InlineLabel text="{messages.type}" />
						<g:Label ui:field="type" />
					</div>
					<div>
						<g:InlineLabel text="{messages.brewerie}" />
						<g:Label ui:field="brewery" />
					</div>
				</g:HTMLPanel>
			</g:DisclosurePanel>

			<g:DisclosurePanel open="true">
				<g:customHeader>
					<g:InlineLabel text="{messages.commentsTitle}" />
				</g:customHeader>
				<g:FlowPanel ui:field="commentsPanel" />
			</g:DisclosurePanel>

		</div>

	</g:HTMLPanel>

</ui:UiBinder> 
