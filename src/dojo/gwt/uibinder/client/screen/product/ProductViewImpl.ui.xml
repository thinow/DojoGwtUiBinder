<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<g:HTMLPanel>

		<!-- Colonne de gauche -->
		<div>
			<g:Image ui:field="picture" />
		</div>

		<!-- Corps de la vue -->
		<div>

			<g:Label ui:field="name" />

			<div>
				<span>Note moyenne :</span>
				<g:NumberLabel ui:field="rate" />
				<span>/</span>
				<g:NumberLabel ui:field="maxRate" />
			</div>

			<g:DisclosurePanel open="true">
				<g:header>Description</g:header>
				<g:Label ui:field="description" />
			</g:DisclosurePanel>

			<g:DisclosurePanel open="true">
				<g:header>Détails</g:header>
				<g:HTMLPanel>
					<span>Couleur</span>
					<g:Label ui:field="color" />
					<span>Degré d'alcool</span>
					<g:Label ui:field="alcohol" />
					<span>Type</span>
					<g:Label ui:field="type" />
					<span>Brasserie</span>
					<g:Label ui:field="brewery" />
				</g:HTMLPanel>
			</g:DisclosurePanel>

			<g:DisclosurePanel open="true">
				<g:header>Commentaires</g:header>
				<g:FlowPanel ui:field="commentsPanel" />
			</g:DisclosurePanel>

		</div>

	</g:HTMLPanel>

</ui:UiBinder> 