<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:r="urn:import:dojo.gwt.uibinder.client.screen.product.rate">

	<ui:style>
		@def lightColor #fff;
		@def mediumColor #6997d3;
		@def darkColor #05326d;
		.column {
			height: 38em;
			padding: 1em;
		}
		
		.column.left {
			float: left;
			background-color: darkColor;
		}
		
		.column.right {
			float: right;
			width: 55em;
			background-color: lightColor;
		}
		
		.name {
			float: left;
			font-size: 30px;
			color: darkColor;
		}
		
		.rate {
			float: right;
			padding: 0.8em;
			text-align: center;
			background-color: mediumColor;
			color: lightColor;
		}
		
		.rate .line {
			font-size: 22px;
			font-weight: bold;
		}
		
		.clear {
			clear: both;
		}
		
		@external gwt-DisclosurePanel, header, content;
		.gwt-DisclosurePanel {
			padding: 0.8em 0;
			width: 100%;
		}
		
		.gwt-DisclosurePanel .header {
			background-color: mediumColor;
		}
		
		.gwt-DisclosurePanel .header TD {
			color: lightColor;
		}
		
		.gwt-DisclosurePanel .content {
			border-left: none;
		}
	</ui:style>

	<g:HTMLPanel>

		<!-- Colonne de gauche -->
		<div class="{style.column} {style.left}">
			<g:Image ui:field="picture" />
		</div>

		<!-- Corps de la vue -->
		<div class="{style.column} {style.right}">

			<g:Label ui:field="name" addStyleNames="{style.name}" />

			<div class="{style.rate}">
				<span>Note moyenne :</span>
				<r:RateLine ui:field="rateLine" addStyleNames="{style.line}" />
			</div>

			<g:DisclosurePanel open="true" addStyleNames="{style.clear}">
				<g:header>Description</g:header>
				<g:Label ui:field="description" />
			</g:DisclosurePanel>

			<g:DisclosurePanel open="true">
				<g:header>Détails</g:header>
				<g:HTMLPanel>
					<span>Couleur</span>
					<g:Label ui:field="color" />
					<span>Degré d'alcool</span>
					<g:Label ui:field="alcohol" />
					<span>Type</span>
					<g:Label ui:field="type" />
					<span>Brasserie</span>
					<g:Label ui:field="brewery" />
				</g:HTMLPanel>
			</g:DisclosurePanel>

			<g:DisclosurePanel open="true">
				<g:header>Commentaires</g:header>
				<g:FlowPanel ui:field="commentsPanel" />
			</g:DisclosurePanel>

		</div>

	</g:HTMLPanel>

</ui:UiBinder> 
